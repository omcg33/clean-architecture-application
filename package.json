{
    "scripts": {
        "install:common": "npm --prefix ./common install",
        "install:client": "npm --prefix ./client install",
        "install:server": "npm --prefix ./server install",
        "install": "npm run install:common && npm run install:client && npm run install:server",

        "build:common": "npm --prefix ./common run build",
        "build:client": "npm --prefix ./client run build",
        "build:server": "npm --prefix ./server run build",
        "build": "npm run build:common && npm run build:client && npm run build:server",

        "start": "npm --prefix ./server run start"
    }
}